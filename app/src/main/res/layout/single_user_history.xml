<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    app:cardCornerRadius="19dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp">
                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/image"
                         />
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/userNameSingleHistoryProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maslinia313"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/toolBarColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/group_name_display"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-light"
                            android:textColor="@color/text_color"/>
                        <TextView
                            android:id="@+id/resultTimeSingleHistoryProfileTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22 Oct 2020"
                            android:textSize="12sp"
                            android:layout_marginRight="5dp"
                            android:fontFamily="sans-serif-light"
                            android:textColor="@color/text_color"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">


            </LinearLayout>

            <TextView
                android:id="@+id/singleHistoryTopic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Do you support students protest? Do you support students protest? "
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/text_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Response"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/text_color"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Comments"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/text_color"/>


            </LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>